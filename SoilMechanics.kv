WindowManager:
    MainWindow:
    LLWindow:
    SCSWindow:
    WCWindow:
    SRWindow:
    VRWindow:



<MainWindow>:
    name:"mainwindow"

    GridLayout:
        cols: 3
        size: root.width, root.height
        Button:
            text:   "Soil Classification System"
            halign: 'center'
            valign: 'center'
            text_size: self.size
            on_release:
                app.root.current = "scswindow"
                root.manager.transition.direction = "right"
        Button:
            text:   "Liquid Limit Calculator"
            halign: 'center'
            valign: 'center'
            text_size: self.size
            on_release:
                app.root.current = "llwindow"
                root.manager.transition.direction = "left"
        Button:
            text:   "Water Content Calculator"
            halign: 'center'
            valign: 'center'
            text_size: self.size
            on_release:
                app.root.current = "wcwindow"
                root.manager.transition.direction = "left"
        Button:
            text:   "Degree of Saturation Calculator"
            halign: 'center'
            valign: 'center'
            text_size: self.size
            on_release:
                app.root.current = "srwindow"
                root.manager.transition.direction = "left"
        Button:
            text:   "Void Ratio Calculator"
            halign: 'center'
            valign: 'center'
            text_size: self.size
            on_release:
                app.root.current = "vrwindow"
                root.manager.transition.direction = "left"
        Button:
            text:   "Exit"
            halign: 'center'
            valign: 'center'
            text_size: self.size
            on_release: app.stop()


<LLWindow>:
    name:"llwindow"
    GridLayout:
        cols:2
        size: root.width, root.height
        Label:
            text: "Number Of Blows"
            halign: 'center'
            valign: 'center'
            text_size: self.size
            font_size:16
        Label:
            text: "Moisture Content %"
            halign: 'center'
            valign: 'center'
            text_size: self.size
            font_size:16
        TextInput:
            id: nob1input
            input_filter:'int'
        TextInput:
            id: mc1input
            input_filter:'float'
        TextInput:
            id: nob2input
            input_filter:'int'
        TextInput:
            id: mc2input
            input_filter:'float'
        TextInput:
            id: nob3input
            input_filter:'int'
        TextInput:
            id: mc3input
            input_filter:'float'
        TextInput:
            id: nob4input
            input_filter:'int'
        TextInput:
            id: mc4input
            input_filter:'float'
        Label:
            id: lllabel
            ext: ''
        GridLayout:
            cols:2
            Button:
                text: "Calculate and Plot"
                halign: 'center'
                valign: 'center'
                text_size: self.size
                on_release:root.plotButtonfunc()

            Button:
                text: "Go Back"

                on_release:
                    app.root.current = 'mainwindow'
                    root.manager.transition.direction = 'right'








<SCSWindow>:
    name: "scswindow"
