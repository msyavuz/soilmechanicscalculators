            halign: 'center'
            valign: 'center'
            text_size: self.size
            font_size:16
        TextInput:
            id: piinput
            input_filter:'float'
        Label:
            text: "D10"
            halign: 'center'
            valign: 'center'
            text_size: self.size
            font_size:16
        TextInput:
            id: d10input
            input_filter:'float'
        Label:
            text: "D30"
            halign: 'center'
            valign: 'center'
            text_size: self.size
            font_size:16
        TextInput:
            id: d30input
            input_filter:'float'
        Label:
            text: "D60"
            halign: 'center'
            valign: 'center'
            text_size: self.size
            font_size:16
        TextInput:
            id: d60input
            input_filter:'float'
        Label:
            text: "Type of Soil:"
            halign: 'center'
            valign: 'center'
            text_size: self.size
        Label:
            id:resultlabel
            text:''
            halign: 'center'
            valign: 'center'
            text_size: self.size
        Button:
            text: "Calculate"
            halign: 'center'
            valign: 'center'
            text_size: self.size
            font_size:16

            on_release: root.onButton()
        Button:
            text: "Go Back"
            halign: 'center'
            valign: 'center'
            text_size: self.size
            font_size:16

            on_release:
                app.root.current = 'mainwindow'
                root.manager.transition.direction = 'left'


